<h2 class="my-6 text-2xl font-semibold text-gray-700">
  Dashboard
</h2>
<div class="px-4 py-3 mb-8 bg-purple-600 rounded-lg shadow-md">
  <p class="text-sm font-semibold text-white">
    Hi <%= current_user.full_name %>! Here you will find your account information
  </p>
</div>
<% # Flash messages [success, error] %>
 <%= render "layouts/components/alerts" %>
<div class="grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4">
  <% # Card: Status account %>
  <div
    class="flex items-center p-4 bg-white rounded-lg shadow-md">
    <div
      class="p-3 mr-4 text-purple-500 bg-purple-100 rounded-full ">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path
          d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"></path>
      </svg>
    </div>
    <div>
      <p class="mb-2 text-sm font-medium text-gray-600">
        Account's status
      </p>
      <span class="<%= color_status(account.try(:status)) %>">
        <%= account.try(:status) ? 'Active' : 'Suspended' %>
      </span>
    </div>
  </div>
  <% # Card: Balance available %>
  <div
    class="flex items-center p-4 bg-white rounded-lg shadow-md">
    <div
      class="p-3 mr-4 text-blue-500 bg-blue-100 rounded-full ">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path
          fill-rule="evenodd"
          d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z"
          clip-rule="evenodd"></path>
      </svg>
    </div>
    <div>
      <p class="mb-2 text-sm font-medium text-gray-600">
        Balance available
      </p>
      <p class="text-lg font-semibold text-gray-700 ">
        <%= number_to_currency(account.try(:balance), unit: "$ ", separator: ".", delimiter: ",") %>
      </p>
    </div>
  </div>
  <% # Card: Action deposits %>
  <div
    class="flex items-center p-4 bg-white rounded-lg shadow-md">
    <div
      class="p-3 mr-4 text-green-500 bg-green-100 rounded-full">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 21 21"><path fill="currentColor" d="M15 15V17H18V20H20V17H23V15H20V12H18V15M14.97 11.61C14.85 10.28 13.59 8.97 12 9C10.3 9.03 9 10.3 9 12C9 13.7 10.3 14.94 12 15C12.38 15 12.77 14.92 13.14 14.77C13.41 13.67 13.86 12.63 14.97 11.61M13 16H7C7 14.9 6.11 14 5 14V10C6.11 10 7 9.11 7 8H17C17 9.11 17.9 10 19 10V10.06C19.67 10.06 20.34 10.18 21 10.4V6H3V18H13.32C13.1 17.33 13 16.66 13 16Z"></path></svg>
    </div>
    <div>
      <p class="mb-2 text-sm font-medium text-gray-600">
        Deposits
      </p>
      <p class="text-lg font-semibold text-gray-700"><%= transactions.try(:deposit) %></p>
    </div>
  </div>
  <% # Card: Action withdraws%>
  <div
    class="flex items-center p-4 bg-white rounded-lg shadow-md">
    <div class="p-3 mr-4 text-red-500 bg-red-100 rounded-full">
      <svg class="w-5 h-5" viewBox="0 0 20 20"><path fill="currentColor" d="M15 15V17H23V15M14.97 11.61C14.85 10.28 13.59 8.97 12 9C10.3 9.03 9 10.3 9 12C9 13.7 10.3 14.94 12 15C12.38 15 12.77 14.92 13.14 14.77C13.41 13.67 13.86 12.63 14.97 11.61M13 16H7C7 14.9 6.11 14 5 14V10C6.11 10 7 9.11 7 8H17C17 9.11 17.9 10 19 10V10.06C19.67 10.06 20.34 10.18 21 10.4V6H3V18H13.32C13.1 17.33 13 16.66 13 16Z"></path></svg>
    </div>
    <div>
      <p class="mb-2 text-sm font-medium text-gray-600">
        Withdraws
      </p>
      <p class="text-lg font-semibold text-gray-700"><%= transactions.try(:withdraw) %></p>
    </div>
  </div>
  <%= button_to(new_account_path, class: "flex items-center justify-between
      w-full px-4 py-2 text-sm font-medium leading-5 text-white
      transition-colors duration-150 bg-gray-500 border border-transparent
      rounded-lg active:bg-gray-500 hover:bg-gray-600 focus:outline-none
      focus:shadow-outline-gray", method: :get) do %>
    Create new account
    <span class="ml-2" aria-hidden="true">+</span>
  <% end %>
</div>
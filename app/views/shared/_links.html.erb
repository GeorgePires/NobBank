<% if action_name != "show" %>
  <%= link_to "Show", account_path(account), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium bg-purple-100" %>
  <%= link_to "Deposit", account_deposit_path(account), method: :get,
                                                      class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Withdraw", account_withdraw_path(account), method: :get,
                                                    class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Transfer", account_transfer_path(account), method: :get,
                                                          class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <hr class="mt-6">
<% end %>

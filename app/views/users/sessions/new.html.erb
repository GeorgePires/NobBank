<section class="bg-white">
  <div class="container px-6 py-24 mx-auto lg:py-32">
    <div class="lg:flex">
      <div class="lg:w-1/2">
        <%= link_to(root_path, class:"flex items-center") do %>
          <%= image_tag('logo.svg', class: 'h-6 mr-3 sm:h-9') %>
          <span class="self-center text-xl font-semibold whitespace-nowra">
            NobBank
          </span>
        <% end %>
        <h1 class="mt-4 text-gray-600 md:text-lg">Welcome back</h1>
        <h1 class="mt-4 text-2xl font-medium text-gray-800 capitalize lg:text-3xl">
          login to your account
        </h1>
      </div>
      <div class="mt-8 lg:w-1/2 lg:mt-0">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'w-full lg:max-w-xl') do |f| %>
          <div>
            <%= f.label :email_address, class: "block mb-2 text-sm text-gray-800" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class:"block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-400 rounded-lg focus:ring-purple-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
          </div>
          <div class="mt-6">
            <div class="flex justify-between mb-2">
              <%= f.label :password, class: "text-sm text-gray-800"%><br />
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Your Password", class: "block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-400 rounded-lg focus:ring-purple-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
          </div>
          <div class="mt-8 md:flex md:items-center">
            <%= f.submit "Sign in", class: "w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-purple-500 rounded-lg md:w-1/2 hover:bg-purple-400 focus:outline-none focus:ring focus:ring-purple-300 focus:ring-opacity-50"%>
            <a href="#" class="inline-block mt-4 text-center text-purple-500 md:mt-0 md:mx-6">
              Forgot your password?
            </a>
          </div>
          <%= render "users/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

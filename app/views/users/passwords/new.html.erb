<section class="bg-white">
  <div class="container px-6 py-24 mx-auto lg:py-32">
    <div class="lg:flex">
      <%= render partial: "users/shared/header_devise", locals: { action_message: 'Forgot your password?'} %>
      <div class="mt-8 lg:w-1/2 lg:mt-0">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'w-full lg:max-w-xl') do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="">
            <%= f.label :email_address, class: "block mb-2 text-sm text-gray-800" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class:"block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-400 rounded-lg focus:ring-purple-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
          </div>
          <div class="mt-8 md:flex md:items-center">
            <%= f.submit "Send me reset password instructions", class: "w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-purple-500 rounded-lg md:w-1/2 hover:bg-purple-400 focus:outline-none focus:ring focus:ring-purple-300 focus:ring-opacity-50"%>
            <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "inline-block mt-4 text-center hover:underline text-purple-500 md:mt-0 md:mx-6" %>
          </div>
          <p class="mt-6 text-sm text-center text-gray-500">Don&#x27;t have an account yet?
            <%= link_to "Register now", new_registration_path(resource_name),class: "text-purple-500 focus:outline-none focus:underline hover:underline" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
